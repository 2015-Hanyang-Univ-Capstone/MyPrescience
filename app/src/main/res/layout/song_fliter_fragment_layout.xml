<?xml version="1.0" encoding="utf-8"?>

<com.myprescience.ui.SlidingRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_base_blue"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text="노래 카테고리" />

    <Button
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/color_base_light_blue"
        android:background="@drawable/background"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MyPrescience 모든 노래"
        android:id="@+id/random_SongFilter" />

    <TextView
        android:layout_marginTop="165dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_base_blue"
        android:text="나라 종류 : " />

    <Button
        android:layout_marginTop="150dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/color_base_light_blue"
        android:background="@drawable/background"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="한국 노래"
        android:id="@+id/kpop_SongFilter" />

    <Button
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/color_base_light_blue"
        android:background="@drawable/background"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="외국 노래"
        android:id="@+id/pop_SongFilter" />

    <Button
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/color_base_light_blue"
        android:background="@drawable/background"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BillBoard Hot 100"
        android:id="@+id/billboardHot100_SongFilter" />

</com.myprescience.ui.SlidingRelativeLayout>