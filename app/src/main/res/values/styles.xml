<resources>

    <style name="base_center_white_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="base_center_blue_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_base_blue</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ffffff</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomMainActionBarTheme"
        parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Main ActionBar styles -->
    <style name="MainActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!--<item name="android:background">@color/color_base_light_blue</item>-->
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <!--<item name="background">@color/color_base_light_blue</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/color_base_light_blue</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/color_base_light_blue</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomMySongActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MySongActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ffffff</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MySongActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <!-- MySong ActionBar styles -->
    <style name="MySongActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/color_base_background</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/color_base_background</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="background">@color/color_base_light_blue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:max">5</item>
        <item name="android:rating">0</item>
    </style>

    <style name="HoloActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TabActionBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/TabActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/TabActionBarTabTextStyle</item>
    </style>

    <style name="TabActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TabActionBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/TabActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/TabActionBarTabTextStyle</item>
    </style>

    <style name="TabActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/color_base_theme</item>
        <item name="android:layout_gravity">center_horizontal</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/color_base_light_blue</item>
    </style>

    <style name="TabActionBarTabBarStyle" parent="@android:style/Widget.Holo.Light">
        <item name="android:background">@color/color_base_theme</item>

        <!-- Support library compatibility -->
        <item name="background">@color/color_base_theme</item>
    </style>

    <style name="TabActionBarTabTextStyle"
        parent="@android:style/Widget.Holo">
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:gravity">center</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/color_base_theme</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
