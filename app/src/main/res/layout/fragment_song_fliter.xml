<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/scrollView">

    <com.myprescience.ui.SlidingRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_base_blue"
            android:padding="20dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="노래 카테고리" />

        <!-- 음악종류 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_base_blue"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="음악종류" />

            <Button
                android:layout_marginTop="120dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="모든노래"
                android:id="@+id/random_SongFilter" />

            <Button
                android:layout_marginTop="170dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="한국 노래"
                android:id="@+id/kpop_SongFilter" />

            <Button
                android:layout_marginTop="220dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="외국 노래"
                android:id="@+id/pop_SongFilter" />

            <Button
                android:layout_marginTop="270dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="BillBoard\n Hot 100"
                android:id="@+id/billboardHot100_SongFilter" />

        <!-- 장르 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_base_blue"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="음악장르" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genrePop"
                android:id="@+id/genrePop_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreHiphop"
                android:id="@+id/genreHiphop_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreRnB"
                android:id="@+id/genreRnB_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="270dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreRock"
                android:id="@+id/genreRock_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="320dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreClub"
                android:id="@+id/genreClub_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="370dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreCountry"
                android:id="@+id/genreCountry_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="420dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreElectronic"
                android:id="@+id/genreElectronic_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="470dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/genreJazz"
                android:id="@+id/genreJazz_SongFilter" />

        <!-- 장르 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_base_blue"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="음악속성" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="120dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="평가좋은"
                android:id="@+id/MypRankOrder_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="170dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="균형잡힌"
                android:id="@+id/valance_SongFilter" />

            <Button
                android:layout_marginTop="270dp"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="시끄러운"
                android:id="@+id/loudness_SongFilter"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="220dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="흥겨운"
                android:id="@+id/danceablility_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="270dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="에너지\n넘치는"
                android:id="@+id/energy_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="325dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="라이브"
                android:id="@+id/live_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="375dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="말이 많은"
                android:id="@+id/speechiness_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="425dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="어쿠스틱"
                android:id="@+id/acousticness_SongFilter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="475dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@color/color_base_light_blue"
                android:background="@drawable/background"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="연주곡"
                android:id="@+id/instrumentalness_SongFilter" />

    </com.myprescience.ui.SlidingRelativeLayout>

</ScrollView>