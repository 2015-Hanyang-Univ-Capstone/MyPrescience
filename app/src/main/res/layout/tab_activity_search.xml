<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="10dp"
        tools:context=".SearchSongTab">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_base_blue"
            android:text="당신이 원하는 노래를 찾아드립니다." />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_base_blue"
                android:text="1. 노래 종류를 선택하세요." />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="3" >

                <Button
                    android:id="@+id/valenceProperty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_not_active"
                    android:textSize="10dp"
                    android:text="모든 노래" />

                <Button
                    android:id="@+id/test1s"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_not_active"
                    android:textSize="10dp"
                    android:text="한국 노래" />

                <Button
                    android:id="@+id/est11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_active"
                    android:textSize="10dp"
                    android:text="외국 노래" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="3" >

                <Button
                    android:id="@+id/valenc312eProperty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_active"
                    android:textSize="10dp"
                    android:text="BillBoard Hot100" />

                <Button
                    android:id="@+id/tes423t1s"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_active"
                    android:textSize="10dp"
                    android:text="뭐시기 노래들" />

                <Button
                    android:id="@+id/est2111"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle_not_active"
                    android:textSize="10dp"
                    android:text="저시기 노래들" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_base_blue"
                android:text="2. 노래 속성을 설정하세요." />

            <Button
                android:id="@+id/valanceRangeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangle_not_active"
                android:textSize="10dp"
                android:text="Valence" />

            <!--<com.myprescience.util.RangeSeekBar-->
                <!--android:id="@+id/valanceRangeSeekBar"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="5"-->
                <!--rsb:absoluteMinValue="20"-->
                <!--rsb:absoluteMaxValue="150"-->
                <!--/>-->

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색하기"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>