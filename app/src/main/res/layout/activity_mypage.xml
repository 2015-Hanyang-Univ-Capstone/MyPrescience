<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dongjun.com.myprescience.application.client.ArtistActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:padding="10dp"
        android:background="#FFF" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/profileImageView"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_base_blue"
            android:text="Name"
            android:id="@+id/nameTextView"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_base_light_blue"
            android:text="Rock Mania"
            android:id="@+id/genresTextView"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="10dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/mysongTextView"
                android:text="Song"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@color/color_base_light_blue" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/myartistTextView"
                android:text="Option1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_base_blue"
                android:gravity="center"
                android:background="@color/color_base_background"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/myalbumTextView"
                android:text="Option2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_base_blue"
                android:gravity="center"
                android:background="@color/color_base_background"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/myoptionTextView"
                android:text="Option3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@color/color_base_light_blue"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>