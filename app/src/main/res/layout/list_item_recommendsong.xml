
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:background="#FFF">

            <ImageView
                android:id="@+id/recommendAlbumArtImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/recommendTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/color_base_blue"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/recommendArtistTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:textColor="@color/color_base_light_blue"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recommendGenreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textColor="@color/color_base_light_blue"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:textSize="8sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3" >

                        <Button
                            android:id="@+id/recommendValenceButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="균형\n있는" />

                        <Button
                            android:id="@+id/recommendSpeechinessButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="말이\n많은" />

                        <Button
                            android:id="@+id/recommendEnergyButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="에너지\n넘치는" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3" >

                        <Button
                            android:id="@+id/recommendStudioButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="스튜\n디오" />

                        <Button
                            android:id="@+id/recommendDanceablilityButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="흥이\n나는" />

                        <Button
                            android:id="@+id/recommendAcousticButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="어쿠\n스틱" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3" >

                        <Button
                            android:id="@+id/recommendInstrumentalnessButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="연주곡" />

                        <Button
                            android:id="@+id/recommendVocalButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="보컬" />

                        <Button
                            android:id="@+id/recommendLivenessButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rectangle_not_active"
                            android:textSize="10dp"
                            android:text="라이브" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/ring_rating">

        <TextView
            android:id="@+id/recommendRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="5.0"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="20dp"
            android:textColor="@color/color_base_blue"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="예상평점"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="12dp"
            android:textColor="@color/color_base_blue"
            />

    </LinearLayout>

</FrameLayout>