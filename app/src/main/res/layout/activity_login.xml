<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myprescience.ui.main.LoginActivity"
    android:background="@color/color_base_light_blue">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logoView"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/logoView"
        android:layout_centerHorizontal="true" >

        <TextView
            style="@style/base_center_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Prescience"
            android:textStyle="bold"
            />

        <TextView
            style="@style/base_center_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=" [préʃəns]"
            />

    </LinearLayout>

    <TextView
        style="@style/base_center_white_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="선견지명"
        android:id="@+id/textView"
        android:layout_below="@+id/logoView"
        android:layout_centerHorizontal="true"
        />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/MusicBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="Music By"
        android:layout_above="@+id/Echonest_Spotify"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/Echonest_Spotify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/echonest_spotify"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
